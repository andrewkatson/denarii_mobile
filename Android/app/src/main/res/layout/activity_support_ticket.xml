<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/support_tickets_layout"
    tools:context=".activities.supporttickets.SupportTickets">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/support_ticket_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/supportTicketHeader" />

    <TextView
        android:id="@+id/supportTicketHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/support_ticket_header"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/support_tickets_support_tickets_refresh_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/support_ticket_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/support_tickets_support_tickets_refresh_layout"
        app:layout_constraintBottom_toTopOf="@id/createSupportTicket"
        app:layout_constraintTop_toBottomOf="@id/supportTicketHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supportTicketsSupportTicketsRecyclerView"
            app:layout_constraintBottom_toTopOf="@id/createSupportTicket"
            app:layout_constraintTop_toBottomOf="@id/supportTicketHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:itemCount="1" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/createSupportTicket"
        android:layout_width="221dp"
        android:layout_height="62dp"
        android:text="@string/create_support_ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/support_tickets_support_tickets_refresh_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>