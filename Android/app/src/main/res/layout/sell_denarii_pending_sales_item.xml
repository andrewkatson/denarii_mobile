<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sell_denarii_pending_sales_item_layout">

    <TextView
        android:id="@+id/pendingSalesAmountItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_amount_default"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pendingSalesPriceItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pendingSalesPriceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_price_default"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pendingSalesAmountBoughtItem"
        app:layout_constraintStart_toEndOf="@id/pendingSalesAmountItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pendingSalesAmountBoughtItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ask_amount_bought_default"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pendingSalesPriceItem"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>